<?xml version="1.0" encoding="utf-8"?>
<com.example.siriuskoshelok.ui.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wallet_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_wallet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_wallet" />

        <TextView
            android:id="@+id/wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_400"
            android:text="@string/salary"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_wallet"
            app:layout_constraintStart_toEndOf="@+id/img_wallet"
            app:layout_constraintTop_toTopOf="@+id/img_wallet" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/error_limit"
            android:visibility="gone"
            android:src="@drawable/ic_big_limit"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/wallet_name"
            app:layout_constraintStart_toEndOf="@+id/img_wallet"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/wallet_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_400"
            android:text="@string/test_money"
            android:gravity="right"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_wallet"
            app:layout_constraintStart_toEndOf="@+id/img_wallet"
            app:layout_constraintTop_toTopOf="@+id/img_wallet"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/left_view"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:bring_to_clamp="100dp"
        app:clamp="self"
        app:gravity="right"
        app:sticky="none">

        <ImageView
            android:id="@+id/edit_wal_img"
            style="@style/SwipeBase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/del_wal_img"
            style="@style/SwipeBase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_delete" />

        <ImageView
            android:id="@+id/eye_wal_img"
            style="@style/SwipeBase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_eye" />

    </LinearLayout>

</com.example.siriuskoshelok.ui.SwipeLayout>